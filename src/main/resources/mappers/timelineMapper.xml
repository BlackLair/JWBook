<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.kuwon.jwbook.timeline.repository.TimelineRepository">
  	<select id="selectPostList"
  	resultType="com.kuwon.jwbook.timeline.domain.Post">
  		SELECT
  			post.id
  			, `userId`
  			, `contents`
  			, `imagePath`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`post`
  		ORDER BY
  			`id` DESC;
  	</select>
  	<select id="selectPost" parameterType="int"
  	resultType="com.kuwon.jwbook.timeline.domain.Post">
  		SELECT
  			`id`
  			, `userId`
  			, `contents`
  			, `imagePath`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`post`
  		WHERE
  			`id` = #{id};
  	</select>
  	<insert id="insertPost" parameterType="map">
  		INSERT INTO
  			`post`
  		(
  			`userId`
  			, `contents`
  			, `imagePath`
  		)
  		VALUE
  		(
  			#{userId}
  			, #{contents}
  			, #{imagePath}
  		);
  	</insert>
  	
  	<delete id="deletePost" parameterType="int">
  		DELETE FROM
  			`post`
  		WHERE
  			`id` = #{id};
  	</delete>
  	
  </mapper>
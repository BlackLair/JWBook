<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.kuwon.jwbook.timeline.repository.TimelineRepository">
  	<select id="selectPostList"
  	resultType="com.kuwon.jwbook.timeline.domain.Post">
  		SELECT
  			post.id
  			, `userId`
  			, `contents`
  			, `imagePath`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`post`
  		ORDER BY
  			`id` DESC;
  	</select>
  	<select id="selectPost" parameterType="int"
  	resultType="com.kuwon.jwbook.timeline.domain.Post">
  		SELECT
  			`id`
  			, `userId`
  			, `contents`
  			, `imagePath`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`post`
  		WHERE
  			`id` = #{id};
  	</select>
  	<insert id="insertPost" parameterType="map">
  		INSERT INTO
  			`post`
  		(
  			`userId`
  			, `contents`
  			, `imagePath`
  		)
  		VALUE
  		(
  			#{userId}
  			, #{contents}
  			, #{imagePath}
  		);
  	</insert>
  	
  	<delete id="deletePost" parameterType="int">
  		DELETE FROM
  			`post`
  		WHERE
  			`id` = #{id};
  	</delete>
  	<delete id="deleteLikeAll" parameterType="int">
  		DELETE FROM
  			`like`
  		WHERE
  			`postId` = #{postId};
  	</delete>
  	<select id="selectPostLikeCount"
  	parameterType="int"
  	resultType="int">
  		SELECT
  			count(*)
  		FROM
  			`like`
  		WHERE
  			`postId` = #{postId};
  	</select>
  	<select id="selectLike" parameterType="int"
  	resultType="int">
  		SELECT
  			count(*)
  		FROM
  			`like`
  		WHERE
  			`postId` = #{postId}
  		AND `userId` = #{userId};
  	</select>
  	<insert id="insertLike" parameterType="int">
  		INSERT INTO
  			`like`
  		(
  			`postId`
  			, `userId`
  		)
  		VALUE
  		(
  			#{postId}
  			, #{userId}
  		);
  	</insert>
  	<delete id="deleteLike" parameterType="int">
  		DELETE FROM
  			`like`
  		WHERE
  			`postId` = #{postId}
  		AND `userId` = #{userId};
  	</delete>
  	
  	<select id="selectReplyList" parameterType="int"
  	resultType="com.kuwon.jwbook.timeline.domain.Reply">
  		SELECT
  			`id`
  			, `postId`
  			, `userId`
  			, `contents`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`reply`
  		WHERE
  			`postId` = #{postId};
  	</select>
  	
  	<insert id="insertReply" parameterType="map">
  		INSERT INTO
  			`reply`
  		(
  			`userId`
  			, `postId`
  			, `contents`
  		)
  		VALUE
  		(
  			#{userId}
  			, #{postId}
  			, #{contents}
  		);
  	</insert>
  	
  	<select id="selectReplyById" parameterType="int"
  	resultType="com.kuwon.jwbook.timeline.domain.Reply">
  		SELECT
  			`id`
  			, `postId`
  			, `userId`
  			, `contents`
  			, `createdAt`
  			, `updatedAt`
  			FROM
  				`reply`
  			WHERE
  				`id` = #{id};
  	</select>
  	
  	<delete id="deleteReplyById" parameterType="int">
  		DELETE FROM
  			`reply`
  		WHERE
  			`id` = #{id};
  	</delete>
  	
  	<select id="deleteReplyAll" parameterType="int">
  		DELETE FROM
  			`reply`
  		WHERE
  			`postId` = #{postId};
  	</select>
  </mapper>
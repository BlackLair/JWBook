<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kuwon.jwbook.reply.repository.ReplyRepository">
	<select id="selectReplyList" parameterType="int"
  	resultType="com.kuwon.jwbook.reply.domain.Reply">
  		SELECT
  			`id`
  			, `postId`
  			, `userId`
  			, `contents`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`reply`
  		WHERE
  			`postId` = #{postId};
  	</select>
  	
  	<insert id="insertReply" parameterType="map">
  		INSERT INTO
  			`reply`
  		(
  			`userId`
  			, `postId`
  			, `contents`
  		)
  		VALUE
  		(
  			#{userId}
  			, #{postId}
  			, #{contents}
  		);
  	</insert>
  	
  	<select id="selectReplyById" parameterType="int"
  	resultType="com.kuwon.jwbook.reply.domain.Reply">
  		SELECT
  			`id`
  			, `postId`
  			, `userId`
  			, `contents`
  			, `createdAt`
  			, `updatedAt`
  			FROM
  				`reply`
  			WHERE
  				`id` = #{id};
  	</select>
  	
  	<delete id="deleteReplyById" parameterType="int">
  		DELETE FROM
  			`reply`
  		WHERE
  			`id` = #{id};
  	</delete>
  	
  	<delete id="deleteReplyAll" parameterType="int">
  		DELETE FROM
  			`reply`
  		WHERE
  			`postId` = #{postId};
	</delete>
</mapper>
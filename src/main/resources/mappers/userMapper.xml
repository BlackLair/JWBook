<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.kuwon.jwbook.user.repository.UserRepository">
  	<select id="selectUser"
  	parameterType="string"
  	resultType="int">
  		SELECT
  			count(*)
  		FROM
  			`user`
  		WHERE
  			`loginId` = #{loginId};
  	</select>
  	<insert id="insertUser"
  	parameterType="map">
  		INSERT INTO
  			`user`
  		(
  			`loginId`
  			, `password`
  			, `email`
  		)
  		VALUE
  		(
  			#{loginId}
  			, #{password}
  			, #{email}
  		);
  	</insert>
  	<select id="selectUserByLoginIdAndPassword"
  	parameterType="map"
  	resultType="com.kuwon.jwbook.user.domain.User">
  		SELECT
  			`id`
  			, `loginId`
  			, `password`
  			, `email`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`user`
  		WHERE
  			`loginId` = #{loginId}
  		AND `password` = #{password};
  	</select>
  </mapper>
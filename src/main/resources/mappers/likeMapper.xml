<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kuwon.jwbook.like.repository.LikeRepository">
	<delete id="deleteLikeAll" parameterType="int">
  		DELETE FROM
  			`like`
  		WHERE
  			`postId` = #{postId};
  	</delete>
  	<select id="selectPostLikeCount"
  	parameterType="int"
  	resultType="int">
  		SELECT
  			count(*)
  		FROM
  			`like`
  		WHERE
  			`postId` = #{postId};
  	</select>
  	<select id="selectLike" parameterType="int"
  	resultType="int">
  		SELECT
  			count(*)
  		FROM
  			`like`
  		WHERE
  			`postId` = #{postId}
  		AND `userId` = #{userId};
  	</select>
  	<insert id="insertLike" parameterType="int">
  		INSERT INTO
  			`like`
  		(
  			`postId`
  			, `userId`
  		)
  		VALUE
  		(
  			#{postId}
  			, #{userId}
  		);
  	</insert>
  	<delete id="deleteLike" parameterType="int">
  		DELETE FROM
  			`like`
  		WHERE
  			`postId` = #{postId}
  		AND `userId` = #{userId};
  	</delete>
</mapper>